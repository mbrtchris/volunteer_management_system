<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zipcode %>
    <%= f.input :is_mailing %>
    <%= f.association :organization %>
    <%= f.association :profile %>
    <%= f.association :training %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
