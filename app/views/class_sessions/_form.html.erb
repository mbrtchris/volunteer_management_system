<%= form_for @class_session, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :subject, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :subject, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :notes, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :number_of_students, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :number_of_students, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :start_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :end_time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :room, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :room, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  class_sessions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
