<%- model_class = Announcement -%>
<div class="page-header">
  <h1><%=t '.title', :default => Announcement %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @announcement.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:message) %></dt>
      <dd><pre class="prettyprint"><%= @announcement.message %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:display_until) %></dt>
      <dd><pre class="prettyprint"><%= @announcement.display_until %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              announcements_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_announcement_path(@announcement), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              announcement_path(@announcement),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

