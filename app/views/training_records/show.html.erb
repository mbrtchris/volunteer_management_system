<%- model_class = TrainingRecord -%>
<div class="page-header">
  <h1><%=t '.title', :default => TrainingRecord %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @training_record.type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:has_passed) %></dt>
      <dd><pre class="prettyprint"><%= @training_record.has_passed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:expires_at) %></dt>
      <dd><pre class="prettyprint"><%= @training_record.expires_at %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              training_records_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_training_record_path(@training_record), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              training_record_path(@training_record),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

