<%- model_class = Training -%>
<div class="page-header">
  <h1><%=t '.title', :default => Training %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:training_date) %></dt>
      <dd><pre class="prettyprint"><%= @training.training_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:class_size) %></dt>
      <dd><pre class="prettyprint"><%= @training.class_size %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trainings_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_training_path(@training), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              training_path(@training),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

